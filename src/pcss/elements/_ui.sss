// UI

// THIS IS GROUPED INPUT WHERE DOM MANIPULATIONS IS REQUIRED
// label is used as a placeholder
.input
  position: relative
  &--dynamic
    border-bottom: 1px solid $borderColor
    margin-bottom: 15px
    min-height: 40px
    label
      display: block
      position: absolute
      bottom: 7px
      font-size: 18px
      font-weight: 600
      transition: all $transitionSpeed $ease
    input
      -webkit-appearance: none
      background: transparent
      border: 0
      position: absolute
      left: 0
      right: 0
      bottom: 0
      font-size: 18px
      font-weight: 600
      height: 30px
      color: $grayColor
      &:focus
        outline: none
  &--focused
    label
      font-size: 12px
      font-weight: 400
      color: $grayColor
      transform: translate3d(0, -20px, 0)

// THIS IS REGULAR CLASS MODIFIER FOR THE INPUT IT
.ui-input
  display: block
  width: 100%
  -webkit-appearance: none
  background: white
  border: 0px solid transparent
  outline: 2px solid transparent
  border-radius: 30px
  padding: 13px 15px
  box-shadow: inset 0px 0px 5px color(black a(20%))
  font-size: 14px
  transition: all $transitionSpeed $ease
  &:focus
    box-shadow: 0 0 0px 2px $colorPrimary

  &__validation
    font-size: 12px
    margin-top: 10px
    &::before
      display: inline-block
      content: '*'
      font-size: 14px
      color: $colorRed
      margin-right: 5px

