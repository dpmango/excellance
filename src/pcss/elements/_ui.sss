// Checkbox
.ui-checkbox
  &--chunk
    background: color(white a(50%))
    border-radius: 4px
    border: 1px solid color(#ECF0F1 a(15%))
    margin-bottom: 5px
    transition: all $transitionSpeed $ease
    label
      padding: 11px 15px
      &::before
        left: 15px
      &::after
        left: 16px
    &:hover
      background: white
      border-color: #ECF0F1

  input
    display: none
    width: 0.1px
    height: 0.1px
    opacity: 0
    position: absolute
    top: 0
    left: 0
    &:checked
      + label
        &::before
          border-color: $colorGreen
        &::after
          transform: translateY(-50%) scale(1)
  label
    display: block
    width: 100%
    position: relative
    cursor: pointer
    &::before
      position: absolute
      left: 0
      top: 50%
      transform: translateY(-50%)
      display: inline-block
      content: ' '
      size: 20px
      background-color: white
      border: 1px solid #AFB7C0
      border-radius: 4px
      cursor: pointer
      vertical-align: middle
      cursor: pointer
      transition: all $transitionSpeed ease-in-out
    &::after
      position: absolute
      left: 1px
      top: 50%
      transform: translateY(-50%) scale(0)
      display: inline-block
      content: ' '
      size: 20px
      background-image: svg-load(../../images/svg/checkbox.svg)
      background-repeat: no-repeat
      background-position: center
      transition: transform .2s ease

    span
      display: inline-block
      padding-left: 35px
      vertical-align: top
      line-height: 1.3
      font-size: 14px
      cursor: pointer


.ui-group
  margin-bottom: 20px
  max-width: 240px
  &--labeled
    max-width: 100%
    > label:not(.ui-input__validation)
      font-family: 'Roboto'
      font-size: 14px
      color: $colorPrimary
      margin-bottom: 10px
      font-weight: 600
      display: flex
      justify-content: space-between
      align-items: center
      span
        color: $colorRed

  > label
    font-size: 10px
    margin-bottom: 8px
    display: block

  &.has-error
    .ui-input
      box-shadow: 0 0 0px 2px $colorRed

.ui-select
  position: relative
  font-size: 12px
  &__visible
    display: flex
    align-items: center
    justify-content: space-between
    padding: 10px 15px 10px 10px
    border: 1px solid $borderColor
    border-radius: 4px
    cursor: pointer
    background: white
    span
      display: inline-block

    .icon-dropdown
      font-size: 5px
      flex: 0 0 10px
      transition: transform $transitionSpeed $ease

  &__dropdown
    position: absolute
    top: 40px
    left: 0
    right: 0
    z-index: 5
    padding-top: 10px
    padding-bottom: 10px
    max-height: 200px
    overflow-y: scroll
    background: white
    border-radius: 4px
    box-shadow: 0px 0px 10px color(black a(20%))
    font-size: 14px
    transform: translate3d(0,25px,0)
    opacity: 0
    pointer-events: none
    transition: all $transitionSpeed $ease
    span
      display: block
      padding: 8px 15px
      cursor: pointer
      transition: all $transitionSpeed $ease
      &:hover
        background: #DBDEE0
      &.active
        background: $colorPrimary
        color: white

  &.active
    .icon-dropdown
      transform: rotate(180deg)
    .ui-select__dropdown
      transform: translate3d(0,0px,0)
      opacity: 1
      pointer-events: all
  &--right
    .ui-select__dropdown
      transform: translate3d(25px,0px,0)
      top: 0
      right: -230px
      left: auto
      width: 220px
    &.active
      .icon-dropdown
        transform: rotate(90deg)
